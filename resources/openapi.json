{
  "openapi": "3.1.0",
  "info": {
    "title": "Idrinth's Walled Secrets",
    "description": "The API to be used by clients to the walled secrets server.",
    "contact": {
      "name": "Support",
      "url": "https://tickets.idrinth.de",
      "email": "ticket@idrinth.de"
    },
    "license": {
      "name": "MIT",
      "url": "https://github.com/idrinth/walled-secrets/blob/master/LICENSE"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://###HOST###"
    }
  ],
  "paths": {
    "/api/list-secrets": {
      "description": "List all secrets (notes and logins) for the authenticated user",
      "post": {
        "requestBody": {
          "content": {
            "application/x-www-form-urlencoded": {
              "schema": {
                "type": "object",
                "properties": {
                  "apikey": {
                    "type": "string",
                    "length": 255
                  },
                  "email": {
                    "type": "string",
                    "format": "email"
                  }
                },
                "additionalProperties": false,
                "requiredProperties": [
                  "apikey",
                  "email"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "folder based listing of logins and notes",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "patternProperties": {
                    ".+": {
                      "type": "object",
                      "properties": {
                        "name": {
                          "type": "string"
                        },
                        "id": {
                          "type": "string",
                          "format": "uuid"
                        }
                      }
                    }
                  },
                  "additionalProperties": false
                }
              }
            }
          },
          "403": {
            "description": "something went wrong with the authentication",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/notes/{id}": {
      "description": "Return a single decrypted note for the user",
      "post": {
        "requestBody": {
          "content": {
            "application/x-www-form-urlencoded": {
              "schema": {
                "type": "object",
                "properties": {
                  "apikey": {
                    "type": "string",
                    "length": 255
                  },
                  "master": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string",
                    "format": "email"
                  }
                },
                "additionalProperties": false,
                "requiredProperties": [
                  "apikey",
                  "email"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "folder based listing of logins and notes",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "public": {
                      "type": "string"
                    },
                    "id": {
                      "type": "string",
                      "format": "uuid"
                    },
                    "name": {
                      "type": "string"
                    },
                    "content": {
                      "type": "string"
                    }
                  },
                  "additionalProperties": false
                }
              }
            }
          },
          "403": {
            "description": "something went wrong with the authentication",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/logins/{id}": {
      "description": "Return a single decrypted note for the user",
      "post": {
        "requestBody": {
          "content": {
            "application/x-www-form-urlencoded": {
              "schema": {
                "type": "object",
                "properties": {
                  "apikey": {
                    "type": "string",
                    "length": 255
                  },
                  "master": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string",
                    "format": "email"
                  }
                },
                "additionalProperties": false,
                "requiredProperties": [
                  "apikey",
                  "email"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "folder based listing of logins and notes",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "public": {
                      "type": "string"
                    },
                    "id": {
                      "type": "string",
                      "format": "uuid"
                    },
                    "login": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    },
                    "pass": {
                      "type": "string",
                      "format": "password"
                    },
                    "note": {
                      "type": "string"
                    }
                  },
                  "additionalProperties": false
                }
              }
            }
          },
          "403": {
            "description": "something went wrong with the authentication",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}