{% include 'header.twig' %}
<h1>{{ folder.name }}</h1>
<h2>Logins</h2>
<ul>
{% for login in logins %}
    <li><a href="/logins/{{ login.id }}">{{ login.login }} @ {{ login.domain }}</a></li>
{% endfor %}
</ul>
{% if folder.role == 'Owner' or folder.role == 'Administrator' or folder.role == 'Member' %}
    <form method="post">
        <label for="user">Username</label>
        <input type="text" name="user" id="user"/>
        <label for="domain">Domain</label>
        <input type="text" name="domain" id="domain"/>
        <label for="password">Password</label>
        <input type="password" name="password" id="password"/>
        <label for="note">Note for the password</label>
        <textarea name="note" id="note"></textarea>
        <button type="submit">Add</button>
    </form>
{% endif %}
<h2>Notes</h2>
{% for note in notes %}
    <li><a href="/notes/{{ note.id }}">{{ note.name }}</a></li>
{% endfor %}
{% if folder.role == 'Owner' or folder.role == 'Administrator' or folder.role == 'Member' %}
    <form method="post">
        <label for="name">Name</label>
        <input type="text" name="name" id="name"/>
        <textarea name="content"></textarea>
        <button type="submit">Add</button>
    </form>
{% endif %}
{% include 'footer.twig' %}