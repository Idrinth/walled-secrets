{
    "manifest_version": 2,
    "version": "1.0.0",
    "name": "idrinth/walled-secrets",
    "author": "Björn 'Idrinth' Büttner",
    "homepage_url": "https://github.com/idrinth/walled-secrets",
    "description": "A small open source password manager.",
    "browser_specific_settings": {
        "gecko": {
            "id": "secrets@idrinth.de"
        }
    },
    "icons": {
        "16": "icons/16x16.png",
        "32": "icons/32x32.png",
        "192": "icons/192x192.png",
        "512": "icons/512x512.png"
    },
    "background": {
        "scripts": [
            "libs/esequals.js",
            "libs/webextension-polyfill.min.js",
            "background/background.js",
            "background/context.js"
        ]
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": [
                "libs/webextension-polyfill.min.js",
                "content/content.js"
            ]
        }
    ],
    "options_ui": {
        "browser_style": true,
        "page": "config/login.html"
    },
    "sidebar_action": {
        "default_icon": {
            "16": "icons/16x16.png",
            "32": "icons/32x32.png",
            "192": "icons/192x192.png",
            "512": "icons/512x512.png"
        },
        "default_title": "Walled Secrets",
        "default_panel": "sidebar/folderlist.html",
        "open_at_install": true
    },
    "permissions": [
        "tabs",
        "activeTab",
        "contextMenus",
        "unlimitedStorage",
        "webRequest",
        "storage",
        "alarms"
    ]
}
