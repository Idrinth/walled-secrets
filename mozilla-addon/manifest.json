{
    "manifest_version": 2,
    "version": "1.0.0",
    "name": "idrinth/walled-secrets",
    "author": "Björn 'Idrinth' Büttner",
    "browser_specific_settings": {
      "gecko": {
        "id": "secrets@idrinth.de"
      }
    },
    "icons": {
        "16": "icons/16x16.png",
        "32": "icons/32x32.png",
        "192": "icons/192x192.png",
        "512": "icons/512x512.png"
    },
    "background": {
        "scripts": [
            "background/background.js"
        ]
    },
    "browser_action": {
        "browser_style": true,
        "default_icon": {
            "16": "icons/16x16.png",
            "32": "icons/32x32.png",
            "192": "icons/192x192.png",
            "512": "icons/512x512.png"
        },
        "default_title": "Walled Secrets",
        "default_popup": "popup/login.html",
        "theme_icons": [
            {
                "light": "icons/16x16.png",
                "dark": "icons/16x16.png",
                "size": 16
            }, {
                "light": "icons/32x32.png",
                "dark": "icons/32x32.png",
                "size": 32
            }
        ]
    },
    "sidebar_action": {
        "default_icon": {
            "16": "icons/16x16.png",
            "32": "icons/32x32.png",
            "192": "icons/192x192.png",
            "512": "icons/512x512.png"
        },
        "default_title": "Walled Secrets",
        "default_panel": "sidebar/sidebar.html",
        "open_at_install": true
    },
    "permissions": [
        "*://###HOSTNAME###/*",
        "activeTab",
        "contextMenus",
        "unlimitedStorage",
        "webRequest",
        "storage"
    ]
}
